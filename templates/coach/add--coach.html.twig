{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/listing.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}New coach form!{% endblock %}

{% block body %}

<div>
  <form class="add-coach-form" action="/addCoachSubmitAction">
    <label for="coachName">Coach Name</label>
    <input type="text" id="coachName" name="coachName" placeholder="Name of the coach">

    <label for="salary">Salary</label>
    <input type="text" id="salary" name="salary" placeholder="salary in â‚¬">

    <label for="club">Club*</label>
    <select id="club" name="club">
      <option value="" selected disabled>Select a club</option>
            {% for club in clubs %}
                <option value="{{club.id}}">{{club.name}}</option>
            {% endfor %}
    </select>
  
    <input type="submit" value="Submit">

    <div>
        <label><strong>* means optional</strong></label>
    </div>
  </form>
</div>

{% endblock %}
