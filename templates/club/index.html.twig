{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/listing.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/addButton.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %}Premier League clubs!{% endblock %}

{% block body %}

<table>
	<thead>
		<tr>
			<td>Name</td>
			<td>Budget</td>
			<td>Coach</td>
            <td></td>
            <td></td>
		</tr>
	</thead>
	<tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.name }}</td>
                <td>{{ club.budget }} â‚¬</td>
                <td>{{ (club.coach is not null) ? club.coach.name : 'None' }}</td>
                <td><div onClick="removeClub({{club.id}})" style="cursor:pointer;" data-club-id="{{club.id}}">Delete &#10006;</div></td>
                <td><div onClick="editClub('/updateClub/{{club.id}}')" style="cursor:pointer;" data-url="/updateClub/{{club.id}}" data-club-id="{{club.id}}">Update &#9989;</div></td>
            </tr>
        {% endfor %}
	</tbody>
</table>

<a class="add-button" href="/addClub">Add new club</a>
<a class="add-button" href="/coaches">Coaches</a>
<a class="add-button" href="/players">Players</a>

{% block javascripts %}
    <script src="{{ asset('js/manageClub.js') }}"></script>
{% endblock %}

{% endblock %}
